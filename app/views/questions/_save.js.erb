$("ul.errors").html("");
<% if @question.errors.any? %>
<% @question.errors.full_messages.each do |message| %>
$("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
<% end %>
<% else %>
$(".questions").html("<%= escape_javascript(render "index") %>");
$(".modal").modal("hide");
<% end %>