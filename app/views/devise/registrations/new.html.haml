.container
  %h2= t('.sign_up', :default => "Sign up")
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-inputs

      = f.input :name, :required => true, :autofocus => true, label: false, placeholder:   t('.name', :default => "Name")
      = f.input :lastname, :required => true, label: false, placeholder:   t('.lastname', :default => "Lastname")
      = f.input :email, :required => true, label: false, placeholder:   t('.email', :default => "E-mail")
      = f.input :password, :required => true, label: false, placeholder:   t('.password', :default => "Password")
      = f.input :password_confirmation, :required => true, label: false, placeholder:   t('.password_confirmation', :default => "Password confirmation")
      = f.input :role, collection: User::ROLES, priority: User::ROLES.first,:label_method => :last, :value_method => :first, label: false, prompt: "Выберите роль:"

    .form-actions
      = f.button :submit, t('.sign_up', :default => "Sign up")
  %br/
  = render "devise/shared/links"
