<%= simple_form_for([:profile, @test]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, label: 'Название теста' %>
      <%= f.input :private, priority: [ "Открытый" ], collection: ["Открытый", "Закрытый"], label: "Приватность:" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
